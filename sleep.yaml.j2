apiVersion: batch/v1
kind: Job
metadata:
  name: sleep{{ number }}
spec:
  template:
    metadata:
      annotations:
        deadline: "{{ deadline }}"
        runtime: "{{ runtime }}"
    spec:
      containers:
      - name: sleep0
        image: python
        command: ["python", "-c"]
        args:
        - "import time;
          print({{ deadline }});
          print({{ runtime }});
          time.sleep({{ runtime }});
          print(time.time())"
        imagePullPolicy: IfNotPresent
      restartPolicy: Never
      schedulerName: custom-scheduler
  backoffLimit: 0
